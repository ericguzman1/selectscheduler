{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "installCommand": "npm install" }
    }
  ],
  "routes": [
    {
      "src": "/api/graphql",
      "dest": "http://localhost:7071/api/graphql" // This is a placeholder and should be ignored since you are using Firebase
    },
    {
      "src": "/.*",
      "dest": "client/build/index.html"
    }
  ]
}
